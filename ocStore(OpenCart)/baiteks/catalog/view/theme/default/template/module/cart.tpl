    <?php } else { ?>
    <div class="empty"><?php echo $text_empty; ?><br /><br /><a class="button" id="close_cart"><i class="fa fa-times"></i> <?php echo $text_close; ?></a></div>
    <?php } ?>
  </div>
</div>

